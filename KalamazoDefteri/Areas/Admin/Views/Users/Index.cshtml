@model KalamazoDefteri.Areas.Admin.ViewModels.UsersIndex
@{
    ViewBag.Title = "Index";

}
<div class="row mt-5 mb-5">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table text-center">
                    <thead class="text-uppercase bg-primary">
                        <tr class="text-white">
                            <th scope="col">ID</th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Parola</th>
                            <th scope="col">Rolleri</th>
                            <th scope="col">İşlemler</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                        <tr>
                            <th scope="row">@user.Id</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PasswordHash</td>
                            <td>@String.Join(", ", user.Roles.Select(role => role.name))</td>
                            <td class="pull-left" style="height:26px;">
                                <i class="ti - settings" style="color: yellow; "></i>
                                    @Html.ActionLink("DÜZENLE", "EditUser", new { user.Id }, new { @class = "btn btn-flat btn-success", data_icon = "ti-settings", style = "margin-right:0; height:26px; padding-top:4px;" })
                                
                                    <a href="" class="btn btn-flat btn-light" style="margin-right:0; height:26px; padding-top:4px;">
                                    <i class="ti-pin" style="color:blue;">  </i>PAROLA DEĞİŞTİR
                                </a>
                                <a href="" class="btn btn-flat btn-warning" style="margin-right:0; height:26px; padding-top:4px;">
                                    <i class="ti-trash" style="color:black;">  </i>SİL
                                </a>
                            </td>
                        </tr>
                        }
                        <tr>
                            <th scope="row"></th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <button class="btn btn-flat btn-primary pull-right" style="margin-right:0;"><i class="ti-plus" style="color:yellow;">  </i> YENI KULLANICI OLUSTUR</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>