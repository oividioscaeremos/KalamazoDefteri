@model KalamazoDefteri.ViewModels.CompaniesViewOne
@{
    ViewBag.Title = "Company View";
}

<div class="col-12">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="header-title">FİRMA GÖRÜNTÜLE</h4>
            @using (Html.BeginForm())
            {
            <div class="form-group">
                <label for="example-text-input" class="col-form-label">Firma Adı:</label>
                @Html.TextBoxFor(u => u.ourCompany.Companyname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="example-search-input" class="col-form-label">Telefon Numarası:</label>
                @Html.TextBoxFor(u => u.ourCompany.Phonenumber, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label for="example-email-input" class="col-form-label">Fax Numarası :</label>
                @Html.TextBoxFor(u => u.ourCompany.Faxnumber, new { @class = "form-control" })

            </div>
                <div class="form-group">
                    <label for="example-email-input" class="col-form-label">IBAN : </label>
                @Html.TextBoxFor(u => u.ourCompany.Iban, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="example-email-input" class="col-form-label">Vergi Dairesi : </label>
                    @Html.TextBoxFor(u => u.ourCompany.Taxadministration, new { @class = "form-control" })
                </div>
                <label for="example-email-input" class="col-form-label">Mevcut Bakiye </label>
                <div class="input-group mb-3" style="width:400px; ">
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                    <input type="text" style="height:40px;" value="@Model.ourCompany.Balance" disabled class="form-control" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">ADRES</span>
                    </div>
                    @Html.TextAreaFor(u => u.ourCompany.Address, new { @class = "form-control", style = "height: 209px;"})
                </div>
                <button type="submit" class="btn btn-flat btn-primary btn-lg btn-block" style="font-weight:bolder">FİRMADAKİ DEĞİŞİKLİKLERİ KAYDET</button>
            }
            <br />
            <center>veya @Html.RouteLink("Vazgeç", "Firmalar", new { @Model.ourCompany.belongsToUser})</center>
        </div>
    </div>
</div>