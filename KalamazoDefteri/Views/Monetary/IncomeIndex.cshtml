@model KalamazoDefteri.ViewModels.Monetary
@{
    ViewBag.Title = "IncomeIndex";
}

<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Striped Rows</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead class="text-uppercase">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Firma</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Girdi</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var income in Model.ourCompanies)
                            {
                                <tr>
                                    <th scope="row">@income.Incomeid</th>
                                    <td>@income.Companies.Companyname</td>
                                    <td>@income.Explanation</td>
                                    <td>@income.Date</td>
                                    <td>@income.Payment</td>
                                    <td>
                                        <a href="#"><i class="ti-trash"></i></a>
                                        <a href="#"><i class="ti-folder"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tr>
                            <th scope="row"></th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <button onclick="location.href='@Url.Action("NewIncome")'" class="btn btn-flat btn-primary pull-right"
                                        style="margin-right:0;">
                                    <i class="ti-plus" style="color:yellow;">  </i>
                                    Yeni Girdi Ekle
                                </button>                            
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>