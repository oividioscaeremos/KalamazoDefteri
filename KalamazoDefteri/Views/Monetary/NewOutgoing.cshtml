@model KalamazoDefteri.ViewModels.Outgoing
@{
    ViewBag.Title = "Yeni Girdi";
}

<div class="col-12">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="header-title">YENİ GİDER EKLE</h4>
            @using (Html.BeginForm("NewOutgoing", "Monetary", FormMethod.Post))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label for="example-text-input" class="col-form-label">Firma Adı:</label>
                    @Html.DropDownListFor(u => u.selectedSirketID, new SelectList(Model.sirketler.Items, "Companyid", "Companyname", 1), "Bir firma seçiniz.", new { @class = "custom-select"})

                </div>
                <div class="form-group" style="width: 15%;">
                    <label for="example-search-input" class="col-form-label">Tarih:</label>
                    @Html.TextBoxFor(u => u.Date, new { @class = "form-control", type = "date", @id = "tarihSecimi" })
                </div>
                <label for="example-email-input" class="col-form-label">Miktar: </label>
                <div class="input-group mb-3" style="width:400px; ">
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                    @Html.TextBoxFor(u => u.Payment, new { style = "height:40px !important; ", @class = "form-control" })
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>

                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">AÇIKLAMA:</span>
                    </div>
                    @Html.TextAreaFor(u => u.Explanation, new { @class = "form-control", style = "height: 209px;" })
                </div>
                <button type="submit" class="btn btn-flat btn-primary btn-lg btn-block" style="font-weight:bolder">YENI GIDER EKLE</button>
            }
            <br />
            <center>veya <a href="@Url.Action("OutgoingIndex", new { id = (Database.Session.Query<KalamazoDefteri.Models.User>()
                                                                            .FirstOrDefault(u => u.Username == HttpContext.Current.User.Identity.Name).Id)})">
                          Vazgeç</a>
            </center>
        </div>
    </div>
</div>

